<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="350.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="se2203b.assignments.ifinance.ChangePasswordController">
    <children>
        <Label layoutX="163.0" layoutY="30.0" style="-fx-font-style: Bold;" text="Change password for admin user">
            <font>
                <Font name="System Bold" size="15.0"/>
            </font>
        </Label>
        <Label layoutX="108.0" layoutY="112.0" text="Old Password"/>
        <Label layoutX="106.0" layoutY="158.0" text="New Password"/>
        <Label layoutX="61.0" layoutY="188.0" text="Confirm New Password"/>
        <TextField fx:id="oldPassword" layoutX="196.0" layoutY="108.0" onAction="#oldPasswordText"
                   onKeyTyped="#oldPasswordText" prefHeight="25.0" prefWidth="286.0"/>
        <TextField fx:id="newPassword" layoutX="196.0" layoutY="154.0" onAction="#newPasswordText"
                   onKeyTyped="#newPassword" prefHeight="25.0" prefWidth="286.0"/>
        <TextField fx:id="confirmNewPassword" layoutX="196.0" layoutY="184.0" onAction="#confirmNewPasswordText"
                   onKeyTyped="#confirmNewPassword" prefHeight="25.0" prefWidth="286.0"/>
        <Button fx:id="cancelBtn" layoutX="292.0" layoutY="306.0" mnemonicParsing="false" onAction="#cancel"
                prefHeight="25.0" prefWidth="63.0" text="Cancel"/>
        <Button fx:id="saveBtn" layoutX="395.0" layoutY="306.0" mnemonicParsing="false" onAction="#save"
                prefHeight="25.0" prefWidth="63.0" text="Save"/>
    </children>
</AnchorPane>
